@page
@model CarManagement.AllCarsModel

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vehicles[0].DriveType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicles[0].EngineDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicles[0].Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicles[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicles[0].ConstructionYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicles[0].ModifyDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicles[0].VehiclePrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Vehicles) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DriveType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EngineDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConstructionYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifyDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehiclePrice)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.VehicleId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.VehicleId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.VehicleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
